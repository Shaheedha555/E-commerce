<!-- home section starts      -->

<section class="home">
    <% for( let i=0 ; i < banners.length ; i++ ){ %>
        <a href=""><div class="<%if(i==0){ %>
            slide active <% }else{%>
        slide
        <% } %> " style="background: url(/public/images/banner-img/<%=banners[i].banner%>) no-repeat;">
            <div class="content">
                <h3><%= banners[i].title %></h3>
                <span><%= banners[i].caption %></span>
                <a href="" class="btn">shop now</a>
            </div>
        </div>
    </a>
    <%}%>

    <div id="next-slide" onclick="next()" class="fas fa-angle-right"></div>
    <div id="prev-slide" onclick="prev()" class="fas fa-angle-left"></div>

</section>

<!-- home section ends     -->


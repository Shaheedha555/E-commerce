<%- include('../layouts/user-header') %>


<div class="super_container">
   
    <div class="single_product">
        <div class="container-fluid" style=" background-color: #ffffff;">
            <div class="row"style=" ">
                <div class="col-lg-2 order-lg-1 order-2">
                    <ul class="image_list">
                        <%images.forEach(function(img){%>
                        <li >
                            <a data-fancybox="gallery" href="/public/images/product-img/<%=img%>">
                            <img src="/public/images/product-img/<%=img%>"  alt="">
                            </a>
                        </li>

                        <%})%>
                    </ul>
                    <!-- data-image="https://res.cloudinary.com/dxfq3iotg/image/upload/v1565713229/single_4.jpg" -->
                </div>
                <div class="col-lg-4 order-lg-2 order-1">
                    <div class="image_selected"><img src="/public/images/product-img/<%=product.image%>" alt=""></div>
                </div>
                <div class="col-lg-5 order-3">
                    <div class="product_description">
                     
                        <div class="product_name"><%= product.title%></div>
                        <div> <span class="product_price"><%= product.price%></span> <strike class="product_discount"> <span>₹ 2,000<span> </strike> </div>
                        <div> <span class="product_saved">You Saved:</span> <span style='color:black'>₹ 2,000<span> </div>
                        <hr class="singleline">
                        <div> <span class="product_info"> <%= product.description%></div>

<%- include('../layouts/admin-header.ejs') %>
<section class="container add w-50">
    <h2 class="page-title">Edit banner</h2>

<a href="/admin/banner" class="btn"><i class="fa fa-angle-left"></i></a>
   
<br><br>
<div class=" row">
    <form id="add-edit" method="post" action="/admin/banner/edit-banner/<%= id%>" enctype="multipart/form-data">
       
        <div class="form-group">
            <!-- <label for="title">Title</label> -->
            <input id="title" type="text" class="box" name="title" value="<%= title %>" placeholder="Title">
        </div>
        <div class="form-group">
            <!-- <label for="title">Title</label> -->
            <input id="caption" type="text" class="box" name="caption" value="<%= caption %>" placeholder="Captions">
        </div>
       
        <div class="form-group">
            <!-- <label for="image">Image</label> -->
            <input id="image" type="file" class="box" name="banner" value="<%= banner %>">
            <img  width="100px" height="100px" src="/public/images/banner-img/<%=banner%>" id="img-prvw" alt="">
            <input type="hidden" name="pimage" value="<%= banner %>">

        </div>
        <br>
        <button type="submit" class="btn btn-default">Save</button>
    </form>
</div>
</section>
<%- include('../layouts/admin-footer.ejs') %>
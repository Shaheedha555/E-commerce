<%- include('../layouts/admin-header.ejs') %>


<h2 class="text-center mt-5 h1">All Users</h2>

<section class="users container " > 
    
<div class="table-responsive">
    <table id="example" class="table data-table  align-middle" style="width:100%">
       
        <thead>
            <tr>
                <th >Name</th>
                <th >Email</th>
                <th >Contact</th>
                <th >Image</th>
                <th >Verification</th>
                <th >Action</th>


        </tr>
    </thead>
    <tbody>
        <% users.forEach(function(user){ %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.contact %></td>
                <td> <img width="100px" style="border-radius:50% ;" src="/public/images/user-img/<%= user.image %>" alt="<%=user.name%> img"></td>
                <td><%= user.verified %></td>
                <td><a href="/admin/users/block/<%= user._id %>"><i class="fas fa-ban pe-5"></i></a>
                <a class="confirmDeletion" href="/admin/users/delete/<%= user._id %>"><i class="fa fa-trash"></i> </a></td>
            </tr>
            <% }); %>
        
        
    </tbody>
    
</table>
</div>
    
</section>


<%- include('../layouts/admin-footer.ejs') %>
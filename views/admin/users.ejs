<%- include('../layouts/admin-header.ejs') %>



<section class="users container " > 
    <h2 class="mt-5 h1">All Users</h2>

<div class="table-responsive">
    <% if (count>0){%>

    <table id="example" class="table data-table  align-middle" style="width:100%">
       
        <thead>
            <tr>
                <th >Name</th>
                <th >Email</th>
                <th >Contact</th>
                <th >Image</th>
                <th >Verification</th>
                <th >Action</th>


        </tr>
    </thead>
    <tbody>
        <% users.forEach(function(user){ %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.contact %></td>
                <td>
                    <% if (user.image == ""){%>
                        <img width="80px" height="80px" src="/public/images/no-image.jpg" alt="no-image">
                        <%}else{%>
                         <img width="80px" height="80px" src="/public/images/user-img/<%= user.image %>" alt="<%=user.name%> img">
                         <%}%>                
                </td>
                <td><%= user.verified %></td>
                <td>
                    <% if (!user.status){%>

                    <a class="me-2 text-danger" href="/admin/users/block/<%= user._id %>">Block</a>
                    <%}else{%>
                        <a class="text-dark" href="/admin/users/unblock/<%= user._id %>"> Unblock</a>
                        <%}%>                    
                </td>
            </tr>
            <% }); %>
        
        
    </tbody>
    
</table>
<%}else{%>
    <br><br>
    <h3 class="text-center">No any registered user.</h3>
    <%}%>
</div>
    
</section>


<%- include('../layouts/admin-footer.ejs') %>


<%- include('../layouts/admin-header.ejs') %>

<section class="container add w-50">
 <h2 class="page-title">Add a category</h2>
    <a href="/admin/category" class="btn btn-primary"><i class="fa fa-angle-left"></i></a>
   
    <br><br>
    <div class=" row">
        <form id="add-edit" method="post" action="/admin/category/add-category" enctype="multipart/form-data">
            <% error.forEach(function(err){ %>
                <div class="alert alert-success" role="alert">
                    <%= err %>
                </div>
              <%})%>
            <div class="form-group">
                <!-- <label for="title">Title</label> -->
                <input id="title" type="text" class="box" name="title" value="<%= title %>" placeholder="Title">
            </div>
            <div class="form-group">
                <!-- <label for="image">Image</label> -->
                <input id="image" type="file" class="box" name="image">
                <img src="#" id="img-prvw" alt="">

            </div>
            <br>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
    
</section>


<%- include('../layouts/admin-footer.ejs') %>
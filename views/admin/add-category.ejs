<%- include('../layouts/admin-header.ejs') %>

<section class="container ">
    <h2 class="page-title">Add a category</h2>
    <a href="/admin/category" class="btn btn-primary">Back to all categories</a>
    <br><br>
    <div class="d-flex justify-content-center">
        <form id="add-cat" method="post" action="/admin/category/add-category" enctype="multipart/form-data">
            <% if(message != ''){%>
                <p class="text-<%= message.type%>"> <%= message.message %> </p>
                
            <%}%>
            <div class="form-group">
                <label for="title">Title</label>
                <input id="title" type="text" class="form-control" name="title" value="<%= title %>" placeholder="Title">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input id="image" type="file" class="form-control-file" name="image">
            </div>
            <br>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
    
</section>


<%- include('../layouts/admin-footer.ejs') %>
<%- include('../layouts/admin-header.ejs') %>
<div class="dash-content container add">
    <h2 class="page-title">Add a banner</h2>

<a href="/admin/banner" class="btn"><i class="fa fa-angle-left"></i></a>
   
<br><br>
<div class=" row">
    <form id="add-edit" method="post" action="/admin/banner/add-banner" enctype="multipart/form-data">
       
        <div class="form-group">
            <!-- <label for="title">Title</label> -->
            <input id="title" type="text" class="box" name="title" value="" placeholder="Title">
        </div>
        <div class="form-group">
            <!-- <label for="title">Title</label> -->
            <input id="caption" type="text" class="box" name="caption" value="" placeholder="Captions">
        </div>
        <select name="category" id="category" class="box" >
            <option value="">category</option>
            <% categories.forEach(function(cat){%>
                <option value="<%= cat.title %>"><%= cat.title %></option>
                <%});%>
        </select>
        <div class="form-group">
            <!-- <label for="image">Image</label> -->
            <input id="image" type="file" class="box" name="banner">
            <img src="#" id="img-prvw" alt="">

        </div>
        <br>
        <button type="submit" class="btn btn-default">Save</button>
    </form>
</div>
</div>
</section>
<%- include('../layouts/admin-footer.ejs') %>
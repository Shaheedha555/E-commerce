<%- include('../layouts/admin-header.ejs') %>



<section class="category container "> 
    <br>
    <h2 class=" mt-5 h1">All Categories</h2>

    <a href="/admin/category/add-category" ><button class="btn">Add a new category</button> </a>
    <div class="table-responsive-sm">
        <% if (count>0){%>

        
        <table id="example" class="table data-table align-middle" style="width:100%">
            <% success.forEach(function(msg){ %>
                <div class="alert alert-success" role="alert">
                    <%= msg %>
                </div>
              <%})%>
              <% error.forEach(function(err){ %>
                <div class="alert alert-danger" role="alert">
                    <%= err %>
                </div>
              <%})%>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Image</th>
                    <th>Action</th>
                    
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(function(cat){ %>
                <tr>
                    <td><%= cat.title %></td>
                    <td>
                        <% if (cat.image == ""){%>
                            <img width="80px" height="80px" src="/public/images/no-image.jpg" alt="no-image">
                            <%}else{%>
                                <img width="80px" height="80px" src="/public/images/category-img/<%= cat.image %>" alt="<%=cat.title%> img">
                                <%}%>
                        </td>
                    <td><a href="/admin/category/edit-category/<%= cat._id %>"><i class="fa fa-pen pe-5"></i></a>
                   <a class="confirmDeletion" href="/admin/category/delete-category/<%= cat._id %>" ><i class="fa fa-trash"></i></a></td>
                    <!-- <div id="id01" class="modal">
                        <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
                        <form class="modal-content" action="/">
                          <div class="container">
                            <h1>Delete</h1>
                            <p>Are you sure you want to delete?</p>
                      
                            <div class="clearfix">
                              <button onclick="document.getElementById('id01').style.display='none'" type="button" class="cancelbtn btn">Cancel</button>
                              <a  href="/admin/category/delete-category/<%= cat._id %>"><button type="button" class="deletebtn btn">Delete</button> </a>
                            </div>
                          </div> -->
                        <!-- </form>
                      </div> -->
                </tr>
                <% }); %>
            
            
        </tbody>
        
    </table>
    <%}else{%>
        <br><br>
        <h3 class="text-center">No any Category</h3>
        <%}%>
    </div>
    
</section>


<%- include('../layouts/admin-footer.ejs') %>
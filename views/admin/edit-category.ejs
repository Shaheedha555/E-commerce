<%- include('../layouts/admin-header.ejs') %>

<section class="container add w-50">
    <h2 class="page-title">Edit category</h2>
    <a href="/admin/category" class="btn btn-primary"><i class="fa fa-angle-left"></i></a>
    <br><br>
    <div class="row">
        <form id="edit-cat" method="post" action="/admin/category/edit-category/<%= id %>">
            <% if(message != ''){%>
                <p class="text-<%= message.type%>"> <%= message.message %> </p>
                
            <%}%>
            <div class="form-group">
                <input id="title" type="text" class="box" name="title" value="<%= title %>" placeholder="Title">
            </div>
            <div class="form-group">
                <input id="image" type="file" class="box" name="image" value="<%= image %>" >
            </div>
            <br>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
    
</section>


<%- include('../layouts/admin-footer.ejs') %>